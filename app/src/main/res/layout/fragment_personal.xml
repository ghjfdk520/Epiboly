<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:layout_margin="10dp"
        android:background="@drawable/bg_translucence"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dip"
            android:src="@mipmap/personal_user_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/font_personal_gray"
                    android:text="姓名:" />

                <TextView
                    android:id="@+id/user_name"
                    style="@style/font_personal_black"
                    android:layout_marginLeft="8dip"
                    android:text="东爷" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/font_personal_gray"
                    android:text="手机号码:" />

                <TextView
                    android:id="@+id/user_phone"
                    style="@style/font_personal_black"
                    android:layout_marginLeft="8dip"
                    android:text="110120130" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ly_text_personal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_translucence"
        android:orientation="vertical"
        android:paddingBottom="25dp"
        android:paddingLeft="65dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:orientation="horizontal">

            <TextView
                style="@style/font_personal_black_one"
                android:text="所属区域:" />

            <TextView
                android:id="@+id/user_address"
                style="@style/font_personal_black_one"
                android:layout_marginLeft="8dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:orientation="horizontal">

            <TextView
                style="@style/font_personal_black_one"
                android:text="所属门店:" />

            <TextView
                android:id="@+id/user_sex"
                style="@style/font_personal_black_one"
                android:layout_marginLeft="8dip"
                android:text="男" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:orientation="horizontal">

            <TextView
                style="@style/font_personal_black_one"
                android:text="职位:" />

            <TextView
                android:id="@+id/user_alternate_phone"
                style="@style/font_personal_black_one"
                android:layout_marginLeft="8dip"
                android:text="120316205" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:orientation="horizontal">

            <TextView
                style="@style/font_personal_black_one"
                android:text="工作范围 :" />

            <TextView
                android:id="@+id/user_service"
                style="@style/font_personal_black_one"
                android:layout_marginLeft="8dip"
                android:text="煤气配送，产品维修" />
        </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="24dip"
        android:background="@drawable/bg_translucence"
        android:paddingLeft="65dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/font_personal_black_one"
                android:text="共享位置 :" />

            <Switch
                android:id="@+id/switch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />
        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:id="@+id/ly_edit_personal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="55dip"
        android:paddingRight="42dip"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:orientation="horizontal">

            <TextView
                style="@style/font_personal_gray"
                android:gravity="top"
                android:text="住址:" />

            <EditText
                android:id="@+id/edit_user_address"
                style="@style/edit_personal_gray"
                android:layout_marginLeft="5dip"
                android:hint="住址" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/font_personal_gray"
                android:text="性别:" />


            <RadioGroup
                android:id="@+id/sex_radioGrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/font_personal_black"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="4dip"
                    android:text="男: " />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/personal_radio" />

                <TextView
                    style="@style/font_personal_black"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="4dip"
                    android:text="女: " />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/personal_radio" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:orientation="horizontal">

            <TextView
                style="@style/font_personal_gray"
                android:text="备用联系电话:" />

            <EditText
                android:id="@+id/user_edit_alternate_phone"
                style="@style/edit_personal_gray"
                android:layout_marginLeft="8dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/font_personal_gray"
                android:text="配送项目 :" />

            <TextView
                style="@style/font_personal_black"
                android:layout_marginLeft="8dip"
                android:text="煤气" />

            <CheckBox
                android:id="@+id/checkbox_deliver_gas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/personal_radio"
                android:checked="true" />

            <TextView

                style="@style/font_personal_black"
                android:layout_marginLeft="15dip"
                android:text="维修" />

            <CheckBox
                android:id="@+id/checkbox_repair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/personal_radio"
                android:checked="true" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>