<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dip"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dip"
            android:layout_marginTop="32dip"
            android:src="@mipmap/personal_user_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dip"
            android:layout_marginTop="62dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/font_personal_gray"
                    android:text="姓名:" />

                <TextView
                    android:id="@+id/user_name"
                    style="@style/font_personal_black"
                    android:layout_marginLeft="8dip"
                    android:text="东爷" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dip"
                android:orientation="horizontal">

                <TextView
                    style="@style/font_personal_gray"
                    android:text="手机号码:" />

                <TextView
                    android:id="@+id/user_phone"
                    style="@style/font_personal_black"
                    android:layout_marginLeft="8dip"
                    android:text="110120130" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/ly_text_personal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="65dip"
         >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:orientation="horizontal">

            <TextView
                style="@style/font_personal_black_one"
                android:text="住址:" />

            <TextView
                android:id="@+id/user_address"
                style="@style/font_personal_black_one"
                android:layout_marginLeft="8dip"
                android:text="XXXXXXXXXXXXXXXX" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:orientation="horizontal">

            <TextView
                style="@style/font_personal_black_one"
                android:text="性别:" />

            <TextView
                android:id="@+id/user_sex"
                style="@style/font_personal_black_one"
                android:layout_marginLeft="8dip"
                android:text="男" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:orientation="horizontal">

            <TextView
                style="@style/font_personal_black_one"
                android:text="备用联系电话:" />

            <TextView
                android:id="@+id/user_alternate_phone"
                style="@style/font_personal_black_one"
                android:layout_marginLeft="8dip"
                android:text="120316205" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:orientation="horizontal">

            <TextView
                style="@style/font_personal_black_one"
                android:text="配送项目 :" />

            <TextView
                android:id="@+id/user_service"
                style="@style/font_personal_black_one"
                android:layout_marginLeft="8dip"
                android:text="煤气   维修" />
        </LinearLayout>
        <RelativeLayout
            android:visibility="gone"
            style="@style/hweight_wfill">

            <ImageView
                android:id="@+id/personal_modified_data"
                style="@style/double_wrap"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="15dip"
                android:src="@drawable/personal_modified_data" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ly_edit_personal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical"
        android:paddingLeft="55dip"
        android:paddingRight="42dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:orientation="horizontal">

            <TextView
                style="@style/font_personal_gray"
                android:gravity="top"
                android:text="住址:" />

            <EditText
                android:id="@+id/edit_user_address"
                style="@style/edit_personal_gray"
                android:layout_marginLeft="5dip"
                android:hint="住址" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/font_personal_gray"
                android:text="性别:" />


            <RadioGroup
                android:id="@+id/sex_radioGrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/font_personal_black"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="4dip"
                    android:text="男: " />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/personal_radio" />

                <TextView
                    style="@style/font_personal_black"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="4dip"
                    android:text="女: " />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/personal_radio" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:orientation="horizontal">

            <TextView
                style="@style/font_personal_gray"
                android:text="备用联系电话:" />

            <EditText
                android:id="@+id/user_edit_alternate_phone"
                style="@style/edit_personal_gray"
                android:layout_marginLeft="8dip"
                android:hint="120316205" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/font_personal_gray"
                android:text="配送项目 :" />

            <TextView
                style="@style/font_personal_black"
                android:layout_marginLeft="8dip"
                android:text="煤气" />

            <CheckBox
                android:id="@+id/checkbox_deliver_gas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/personal_radio"
                android:checked="true" />

            <TextView

                style="@style/font_personal_black"
                android:layout_marginLeft="15dip"
                android:text="维修" />

            <CheckBox
                android:id="@+id/checkbox_repair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/personal_radio"
                android:checked="true" />
        </LinearLayout>



            <ImageView
                android:visibility="gone"
                android:id="@+id/personal_edit_save"
                style="@style/double_wrap"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="55dp"
                android:src="@drawable/personal_edit_save" />

    </LinearLayout>


</LinearLayout>